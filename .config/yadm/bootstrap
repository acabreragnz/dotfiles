#!/bin/sh

# update the system
sudo apt update && sudo apt upgrade -y

# install git
sudo apt install -y git

# install curl
sudo apt install -y curl

# install zsh and oh my zsh
sudo apt install -y zsh
sh -c "$(wget -O- https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# Definir la ubicación del directorio de plugins de oh-my-zsh
OH_MY_ZSH_CUSTOM="${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins"

# Función para instalar o reinstalar un plugin
install_plugin() {
  local plugin_name="$1"
  local git_repo="$2"
  local plugin_dir="${OH_MY_ZSH_CUSTOM}/${plugin_name}"

  # Verificar si el directorio del plugin ya existe
  if [ -d "$plugin_dir" ]; then
    echo "El plugin ${plugin_name} ya está instalado. Reinstalándolo."
    rm -rf "$plugin_dir"
  fi

  # Clonar el repositorio del plugin
  git clone "$git_repo" "$plugin_dir"
  echo "Plugin ${plugin_name} clonado correctamente."

  # Añadir el plugin a la lista de plugins en .zshrc si aún no está
  if ! grep -q "$plugin_name" ~/.zshrc; then
    sed -i "/^plugins=(/ s/$/ $plugin_name)/" ~/.zshrc
    echo "Plugin ${plugin_name} añadido al archivo .zshrc."
  else
    echo "Plugin ${plugin_name} ya presente en .zshrc."
  fi
}

# Instalar o reinstalar zsh-syntax-highlighting
install_plugin "zsh-syntax-highlighting" "https://github.com/zsh-users/zsh-syntax-highlighting.git"

# Instalar o reinstalar zsh-autosuggestions
install_plugin "zsh-autosuggestions" "https://github.com/zsh-users/zsh-autosuggestions.git"

echo "Por favor, reinicia tu terminal o abre una nueva pestaña para aplicar los cambios."

# fonts for zsh theme
sudo apt install -y fonts-powerline

# install nvm
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh | bash

\. "$HOME/.nvm/nvm.sh"

# install latest lts version of node
nvm install --lts
nvm alias default node

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# install github cli
sudo mkdir -p -m 755 /etc/apt/keyrings && wget -qO- https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo tee /etc/apt/keyrings/githubcli-archive-keyring.gpg > /dev/null \
&& sudo chmod go+r /etc/apt/keyrings/githubcli-archive-keyring.gpg \
&& echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
&& sudo apt update \
&& sudo apt install gh -y

# install gnome tweaks
sudo apt install gnome-tweaks -y

# For VSCode, Warp, and Chrome, which are more prone to download link changes, handle them separately
# Download and install Warp
wget https://app.warp.dev/download?package=deb -O warp.deb && sudo dpkg -i warp.deb && rm warp.deb

# Download and install VSCode
wget https://code.visualstudio.com/sha/download?build=stable&os=linux-deb-x64 -O vscode.deb && sudo dpkg -i vscode.deb && rm vscode.deb

# Download and install Google Chrome
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb -O chrome.deb && sudo dpkg -i chrome.deb && rm chrome.deb

# Fix possible missing dependencies after installation
sudo apt install -f -y
