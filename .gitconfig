[user]
	name = Toni Cabrera
	email = acabreragnz@gmail.com
[push]
	default = simple
	followTags = true
[pull]
	rebase = true
	ff = only
[fetch]
	prune = true
[core]
	pager = less -x4
	editor = code -w
[init]
	defaultBranch = main
[merge]
	ff = false
[grep]
	lineNumber = true
[rerere]
	enabled = true
[rebase]
	autoStash = true
[help]
	autoCorrect = prompt
[alias]
	update = "!f() { if [ \"$#\" -ne 1 ]; then echo \"Error: the base branch is required\"; return 1; fi; git fetch origin && git rebase origin/\"$1\"; }; f"
