{
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Tool:WebSearch",
      "Tool:WebFetch",
      "mcp__chrome-devtools__*"
    ],
    "defaultMode": "default"
  },
  "model": "sonnet",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "playwright-cli@playwright-cli": true,
    "document-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true
}
